package Problem;

import java.util.Arrays;



public class Solver {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int test = lengthOfLongestSubstring("bbb");
		System.out.println(test);
		
	}
	public static int lengthOfLongestSubstring(String s) {
        int[] check = new int[26];
        int longest = 0;
        int size = s.length();
        s=s.toUpperCase();
        Arrays.fill(check, 0);
        int max = -1;
        String temp = "";
        String result = "";
        for(int i = 0; i< size;i++ ){
        	int pos = s.charAt(i)-65;
        	if(check[pos]!=0){
        		i = check[pos]+1;
        		Arrays.fill(check,0);
        		if(longest > max){
        			max = longest;
        			result = temp;
        		}
    			temp ="";
    			continue;
        	}
        	check[pos]=i;
        	temp = temp+s.charAt(i);
        	longest++;
        }
        return longest;
    }

}
